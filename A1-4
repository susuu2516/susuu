public class Customer {
    private String name;
    private String contact;
    private String deliveryAddress;
    private boolean active;
    private List<Order> orders = new ArrayList<>();

    // constructors, getters, setters...
}

public class Order {
    private LocalDate createDate;
    private OrderStatus status;
    private Customer customer;
    private List<OrderDetail> orderDetails = new ArrayList<>();
    private Payment payment;

    public double getTotalPrice() {
        return orderDetails.stream()
                .mapToDouble(OrderDetail::calculateSubTotal)
                .sum();
    }
}

public class OrderDetail {
    private int quantity;
    private Product product;

    public double calculateSubTotal() {
        return product.getPriceForQuantity(quantity);
    }

    public double calculateWeight() {
        return product.getWeight() * quantity;
    }

    // getters and setters
    public int getQuantity() { return quantity; }
    public Product getProduct() { return product; }
}

public class Product {
    private String title;
    private double weight;      // 单位：kg
    private String description;
    private double unitPrice;   // 为了演示方便加一个单价

    public double getPriceForQuantity(int qty) {
        return unitPrice * qty;
    }

    public double getWeight() { return weight; }

    // constructors, getters, setters...
    public Product(String title, double weight, String description, double unitPrice) {
        this.title = title;
        this.weight = weight;
        this.description = description;
        this.unitPrice = unitPrice;
    }
}

// 支付方式父类
abstract class Payment {
    protected double amount;

    public abstract boolean execute(); // 支付执行
    public double getAmount() { return amount; }
    public void setAmount(double amount) { this.amount = amount; }
}

// 五种具体支付方式
class CreditCard extends Payment {
    private String number;
    private String type;
    private String expireDate;

    @Override public boolean execute() { System.out.println("信用卡支付成功"); return true; }
}

class Cash extends Payment {
    private double cashTendered;

    @Override public boolean execute() { System.out.println("现金支付"); return true; }
}

class WireTransfer extends Payment {
    private String bankID;
    private String bankName;

    @Override public boolean execute() { System.out.println("银行转账支付"); return true; }
}

class AliPay extends Payment {
    private String number;

    @Override public boolean execute() { System.out.println("支付宝支付"); return true; }
}

class WeixinPay extends Payment {
    private String number;

    @Override public boolean execute() { System.out.println("微信支付"); return true; }
}
